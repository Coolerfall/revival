  "compilerOptions": {
    "target": "es6",
    "allowJs": false,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
