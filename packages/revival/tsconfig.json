{
  "compilerOptions": {
    "target": "es6",
    "allowJs": false,
    "sourceMap": false,
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "exclude": [
    "android",
    "ios",
    "node_modules",
    "lib"
  ]
}